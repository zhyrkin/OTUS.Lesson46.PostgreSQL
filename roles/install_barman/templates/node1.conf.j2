[node1]
description = "backup node1"
ssh_command = ssh postgres@{{ hostvars['node1']['ansible_host'] }}
conninfo = host={{ hostvars['node1']['ansible_host'] }} user=barman port=5432 dbname=postgres
retention_policy_mode = auto
retention_policy = RECOVERY WINDOW OF 7 days
wal_retention_policy = main
streaming_archiver=on
path_prefix = /usr/lib/postgresql/15/bin/
create_slot = auto
slot_name = node1
streaming_conninfo = host={{ hostvars['node1']['ansible_host'] }} user=barman 
backup_method = postgres
archiver = off
